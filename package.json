{
  "name": "@erquhart/convex-oss-stats",
  "description": "A Convex Component for syncing and rendering open source project data.",
  "repository": "github:get-convex/oss-stats",
  "homepage": "https://github.com/get-convex/oss-stats#readme",
  "bugs": {
    "email": "support@convex.dev",
    "url": "https://github.com/get-convex/oss-stats/issues"
  },
  "version": "0.5.0",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "component"
  ],
  "type": "module",
  "scripts": {
    "dev": "run-p -r 'dev:*'",
    "dev:backend": "convex dev --typecheck-components",
    "dev:frontend": "cd example && vite --clearScreen false",
    "dev:build": "chokidar 'tsconfig*.json' 'src/**/*.ts' -i '**/*.test.ts' -c 'convex codegen --component-dir ./src/component && npm run build' --initial",
    "predev": "path-exists .env.local || npm run dev:backend -- --until-success",
    "clean": "rm -rf dist *.tsbuildinfo",
    "build": "tsc --project ./tsconfig.build.json",
    "typecheck": "tsc --noEmit && tsc -p example && tsc -p example/convex",
    "lint": "eslint .",
    "all": "run-p -r 'dev:*' 'test:watch'",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck --clearScreen false",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "prepublishOnly": "npm run clean && npm run build",
    "preversion": "npm run clean && npm ci && run-p test lint typecheck",
    "alpha": "npm version prerelease --preid alpha && npm publish --tag alpha && git push --tags",
    "release": "npm version patch && npm publish && git push --tags",
    "version": "vim -c 'normal o' -c 'normal o## '$npm_package_version CHANGELOG.md && prettier -w CHANGELOG.md && git add CHANGELOG.md"
  },
  "files": [
    "dist",
    "src",
    "react"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@convex-dev/component-source": "./src/client/index.ts",
      "types": "./dist/esm/client/index.d.ts",
      "default": "./dist/esm/client/index.js"
    },
    "./react": {
      "@convex-dev/component-source": "./src/react/index.js",
      "types": "./dist/esm/react/index.d.ts",
      "default": "./dist/esm/react/index.js"
    },
    "./_generated/component.js": {
      "types": "./dist/esm/component/_generated/component.d.ts",
      "default": "./dist/esm/component/_generated/component.js"
    },
    "./convex.config": {
      "@convex-dev/component-source": "./src/component/convex.config.ts",
      "types": "./dist/esm/component/convex.config.d.ts",
      "default": "./dist/esm/component/convex.config.js"
    },
    "./convex.config.js": {
      "@convex-dev/component-source": "./src/component/convex.config.ts",
      "types": "./dist/esm/component/convex.config.d.ts",
      "default": "./dist/esm/component/convex.config.js"
    }
  },
  "peerDependencies": {
    "convex": "~1.16.5 || ~1.17.0",
    "react": "^17.0.2 || ^18.0.0 || ^19.0.0-0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.19.0",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@vitejs/plugin-react": "^4.3.1",
    "chokidar-cli": "3.0.0",
    "convex": "^1.29.3",
    "convex-test": "^0.0.33",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "npm-run-all2": "8.0.4",
    "path-exists-cli": "2.0.0",
    "prettier": "3.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.6"
  },
  "main": "./dist/commonjs/client/index.js",
  "types": "./dist/commonjs/client/index.d.ts",
  "module": "./dist/esm/client/index.js",
  "dependencies": {
    "@convex-dev/crons": "^0.2.0",
    "@octokit/graphql": "^8.1.1",
    "@octokit/graphql-schema": "^15.25.0",
    "cheerio": "^1.0.0",
    "convex-helpers": "^0.1.67",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.11.17",
    "nano": "^10.1.4",
    "npm-api": "^1.0.1",
    "octokit": "^4.0.2",
    "p-limit": "^6.1.0",
    "remeda": "^2.17.3"
  }
}
