{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    "target": "ESNext",
    "lib": ["ES2023", "dom"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*", "./modules.d.ts"]
}
